# Others
#
# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+minus scratchpad show

# Make all google-chrome use a 1-pixel border:
for_window [class="Google-chrome"] border 1pixel

# Assign apps to workspaces
#assign [class="Thunar"] 6

# Assign workspaces to screens
workspace $ws1  output eDP1
workspace $ws2  output eDP1
workspace $ws3  output eDP1
workspace 9  output HDMI2
workspace $ws0 output HDMI2

# auto starts services
exec --no-startup-id dropbox start
#exec CopyAgent
#exec unclutter
#exec mpd

# Windows border
new_window 1pixel

# Hide boders screen
hide_edge_borders both


# Print Screen - scrot & gimp - root
bindsym Print exec scrot -e 'mv $f /tmp/ && gimp /tmp/$f'
# Print Screen - scrot & gimp - select window or rectangle
bindsym $mod+Print exec scrot -s -e 'mv $f /tmp/ && gimp /tmp/$f'

