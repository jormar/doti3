# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# ------------------------------------------
# Screens Resolution - Configuration Mode
#

# My Monitors
set $monitorOutput1 eDP-1-0
set $monitorOutput1Pos 1920x260
set $monitorOutput2 HDMI-A-1-0
set $monitorOutput2Pos 0x0

set $monitorMode "Monitor Setup: [0] Dual [1] Laptop only [3] Monitor Only [\u2191] Brightness Up [\u2193] Brightness Down"
mode $monitorMode {
        # These bindings trigger as soon as you enter the Screen Configuration mode

        # default mode: two screens
        #bindsym 0 exec xrandr --output $monitorOutput1 --primary --mode 1920x1080 --output $monitorOutput2 --auto --left-of $monitorOutput1
        bindsym 0 exec xrandr --output $monitorOutput1 --primary --mode 1920x1080 --output $monitorOutput2 --auto --above $monitorOutput1

        # Laptop Only, default laptop size
        bindsym 1 exec xrandr --output $monitorOutput1 --primary --mode 1920x1080 --output $monitorOutput2 --off

        # External Monitor Only, with auto resolution
        bindsym 2 exec "i3-nagbar -t warning -m 'Activaras SOLO el monitor HDMI. ¿Estás seguro?' -b 'Sip, desactiva la laptop que usaré SOLO HDMI' 'exec xrandr --output $monitorOutput2 --primary --auto --output $monitorOutput1 --off'"

	# Cloned monitors
        bindsym 9 exec xrandr --output $monitorOutput1 --primary --mode 1920x1080 --output $monitorOutput2 --same-as $monitorOutput1

        bindsym Up exec /opt/scripts/jmartin-asus/subirBrillo.sh
        bindsym Down exec /opt/scripts/jmartin-asus/bajarBrillo.sh

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+Control+m mode $monitorMode

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
}

