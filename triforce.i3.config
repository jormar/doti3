# GTK theme
#
#exec --no-startup-id gnome-settings-daemon

# ------------------------------------------
# Network Management
#
exec --no-startup-id nm-applet

# ------------------------------------------
# Sound Management
#
exec --no-startup-id gnome-sound-applet

# ------------------------------------------
# Screen configurations
#
# $ xrandr -q
#
#   Screen 0: minimum 8 x 8, current 1920 x 1080, maximum 32767 x 32767
#   HDMI-0 disconnected (normal left inverted right x axis y axis)
#   DP-0 connected primary 1920x1080+0+0 (normal left inverted right x axis y axis) 382mm x 215mm
#      1920x1080     60.02*+  40.02  
#   DP-1 disconnected (normal left inverted right x axis y axis)
#   DP-2 disconnected (normal left inverted right x axis y axis)
#   DP-3 disconnected (normal left inverted right x axis y axis)
#   DP-4 disconnected (normal left inverted right x axis y axis)
#
exec --no-startup-id sleep 2; xrandr --output $monitorOutput1 --primary --mode 1920x1080 --pos $monitorOutput1Pos --output $monitorOutput2 --auto --pos $monitorOutput2Pos


exec --no-startup-id xbacklight -set 40

# ------------------------------------------
# Programs
#
bindsym $mod+Control+n exec google-chrome
bindsym $mod+g exec gvim

# ------------------------------------------
# Lock screen
#
bindsym $mod+Control+l exec i3lock -c 333333

# ------------------------------------------
# Others
#
# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+minus scratchpad show

# Make all google-chrome use a 1-pixel border:
for_window [class="Google-chrome"] border 1pixel

# Assign apps to workspaces
#assign [class="Thunar"] 6

# Assign workspaces to screens
workspace $ws1  output $monitorOutput1
workspace $ws2  output $monitorOutput1
workspace $ws3  output $monitorOutput1
workspace 9  output $monitorOutput2
workspace $ws0 output $monitorOutput2

# auto starts services
exec --no-startup-id dropbox start
#exec CopyAgent
#exec unclutter
#exec mpd

# Windows border
new_window 1pixel

# Hide boders screen
hide_edge_borders both


# Print Screen - scrot & gimp - root
bindsym Print exec scrot -e 'mv $f /tmp/ && gimp /tmp/$f'

# Print Screen - scrot & gimp - select window or rectangle
bindsym $mod+Print exec scrot -s -e 'mv $f /tmp/ && gimp /tmp/$f'

